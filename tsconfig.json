{
    "compilerOptions": {
        "target": "es2021",
        "module": "es2020",
        "rootDir": "./src/",
        "outDir": "./dist",
        "lib": [ "es2021" ],
        "moduleResolution": "node",
        "typeRoots": [
            "./node_modules/@types",
            "./src/@types"
        ],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "include": [ "src" ],
    "exclude": [ "node_modules" ]
}